---
title: 注册
---
<div class="container spaced">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="cbg">
        
      
        <form action="" class="form-horizontal form-large">
          <div class="">
            <h1>注册</h1>
            {{#parseJSON '{"id": "cies_email", "label": "电子邮箱", "horizontal": true}'}}
              {{> form-group }}
            {{/parseJSON}}

            {{#parseJSON '{"id": "cies_codename","label": "代号", "horizontal": true}'}}
              {{> form-group }}
            {{/parseJSON}}

            {{#parseJSON '{"id": "cies_password", "type": "password", "label": "密码", "horizontal": true}'}}
              {{> form-group }}
            {{/parseJSON}}

            {{#parseJSON '{"id": "cies_password_repeat", "type": "password", "label": "重复密码", "horizontal": true}'}}
              {{> form-group }}
            {{/parseJSON}}

            <hr>

            <h2>个人信息</h2>
            {{#parseJSON '{"id": "cies_name", "label": "姓名", "horizontal": true}'}}
              {{> form-group }}
            {{/parseJSON}}

            <div class="form-group">
              <label class="col-xs-3 control-label">
                性别
              </label>
              <div class="col-xs-9">
                <div class="radio-inline">
                  <label>
                    <input type="radio" name="cies_gender" id="cies_gender_m" value="Male" checked>
                    男
                  </label>
                </div>
                <div class="radio-inline">
                  <label>
                    <input type="radio" name="cies_gender" id="cies_gender_f" value="Female">
                    女
                  </label>
                </div>
              </div>
            </div>

            {{#parseJSON '{"id": "cies_dob", "type": "date", "label": "生日", "horizontal": true}'}}
              {{> form-group }}
            {{/parseJSON}}

            {{#parseJSON '{"id": "cies_class", "label": "专业班级", "horizontal": true}'}}
              {{> form-group }}
            {{/parseJSON}}

            {{#parseJSON '{"id": "cies_studentid", "label": "学号", "horizontal": true}'}}
              {{> form-group }}
            {{/parseJSON}}

            {{#parseJSON '{"id": "cies_phone", "label": "手机号码", "horizontal": true}'}}
              {{> form-group }}
            {{/parseJSON}}

            <div class="form-group">
              <div class="col-md-9 col-md-offset-3">
                <a href="#" class="btn btn-primary">提交</a>
              </div> 
            </div>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>

